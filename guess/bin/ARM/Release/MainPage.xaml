<Page
    x:Class="guess.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:guess"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="scr" Background="{StaticResource ApplicationPageBackgroundThemeBrush}"                                  >
        <Canvas x:Name="cav" HorizontalAlignment="Left" Height="640" VerticalAlignment="Top" Width="1195" Margin="85,80,0,0" Visibility="Collapsed">
            <TextBlock x:Name="textb1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="得九个字的测试文本" VerticalAlignment="Top" Height="294" Width="1175" FontSize="128" TextAlignment="Center" Canvas.Left="10" Canvas.Top="146"/>
            <TextBlock x:Name="textsinger" HorizontalAlignment="Left" TextWrapping="Wrap" Text="歌手名" VerticalAlignment="Top" Height="91" Width="510" FontSize="64" TextAlignment="Center" Canvas.Top="490" FontFamily="Global User Interface" Canvas.Left="3"/>
            <TextBlock x:Name="time1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="3：00" VerticalAlignment="Top" Height="141" Width="395" FontSize="128" TextAlignment="Center" Canvas.Left="800" Canvas.Top="499"/>
        </Canvas>
        <Canvas x:Name="result" HorizontalAlignment="Left" Height="675" VerticalAlignment="Top" Width="1235" Margin="45,45,0,0" Visibility="Collapsed">
            <TextBlock x:Name="rightword" HorizontalAlignment="Left" TextWrapping="Wrap" Text="正确单词" VerticalAlignment="Top" Height="626" Width="475" FontSize="32" TextAlignment="Center" Canvas.Left="45" Canvas.Top="39" Foreground="Lime"/>
            <TextBlock x:Name="wrongword" HorizontalAlignment="Left" TextWrapping="Wrap" Text="错误单词" VerticalAlignment="Top" Height="626" Width="475" FontSize="32" TextAlignment="Center" Canvas.Left="680" Canvas.Top="39" Foreground="Red"/>
            <Button x:ConnectionId='3' Content="确认" Canvas.Left="525" Canvas.Top="529" Height="76" Width="150" FontSize="32"                     />
        </Canvas>
        <TextBlock x:Name="time2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="倒计时" VerticalAlignment="Top" Height="294" Width="1175" FontSize="128" TextAlignment="Center" Canvas.Left="10" Canvas.Top="146" Margin="85,184,0,0" Visibility="Collapsed"/>
        <Canvas x:Name="ctime" HorizontalAlignment="Left" Height="640" Margin="85,80,0,0" VerticalAlignment="Top" Width="1220" Background="Black">
            <Button x:ConnectionId='2' x:Name="startbut" Content="开始游戏" HorizontalAlignment="Left" VerticalAlignment="Top" Height="165" Width="320" FontSize="42"                       Canvas.Left="795" Canvas.Top="395"/>
            <TextBlock TextWrapping="Wrap" Text="游戏时间" Height="72" Canvas.Top="10" Width="310" Canvas.Left="10" FontSize="72"/>
            <TextBlock TextWrapping="Wrap" Text="秒" Height="102" Canvas.Top="99" Width="80" Canvas.Left="223" FontSize="72"/>
            <TextBox x:Name="timebox" Canvas.Left="26" TextWrapping="Wrap" Text="180" Canvas.Top="93" Width="180" Height="82" FontSize="52" TextAlignment="Right"/>
        </Canvas>

    </Grid>
</Page>

